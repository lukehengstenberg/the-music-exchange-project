@model IEnumerable<TheMusicExchangeProject.Models.UserSkillsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="search-header">
    <h3 class="search-title">Manage your skills!</h3>
</header>
<p class="table-top">
    <a asp-action="Create" class="create-btn">ADD A  NEW SKILL</a>
</p>
<div class="table-background">
    <div class="table-container">
        <div class="panel skills-table">
            @foreach (var item in Model)
            {
                <div class="skills-object">
                    <h2 class="skills-name">@Html.DisplayFor(modelItem => item.Skills.SkillName)</h2>
                    <ul class="skills-details">
                        <li class="skills-item">@Html.DisplayFor(modelItem => item.SkillLevel)</li>
                        <li class="skills-item">@Html.DisplayFor(modelItem => item.Skills.Description)</li>
                    </ul>
                    <a asp-action="Delete" asp-route-id="@item.Skills.SkillID" class="delete-btn">Delete</a>
                </div>
            }
        </div>
    </div>
</div>